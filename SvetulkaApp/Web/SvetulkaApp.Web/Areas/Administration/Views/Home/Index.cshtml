@model SvetulkaApp.Web.Areas.Administration.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "Admin Panel";
}

<div class="row">
    <div class="col-xl-4">
        <div class="container mobile-fondsize-11 shadow p-4 mb-4 bg-white">
            <div class="mobile-fondsize-20 h3 text-center text-muted font-italic">Unprocessed</div>
            <table class="table table-hover">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-md-2 col d-flex justify-content-center">№</th>
                        <th scope="col" class="col-md-8 col d-flex justify-content-center">Controls</th>
                        <th scope="col" class="col-md-2 col d-flex justify-content-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.UnprocessedОrdersViewModel)
                    {
                    <tr class="row">
                        <td class="col-md-2 col d-flex justify-content-center">
                            @order.Id
                        </td>
                        <td class="col-md-8 col d-flex justify-content-around">
                            <div class="">
                                <a asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Детайли</a>
                            </div>
                            <div class="">
                                <a asp-area="Administration" asp-controller="Orders" asp-action="Process" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Ship</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            @if (Model.UnprocessedОrdersViewModel.Count == 0)
            {
            <div class="mobile-fondsize-11 h6 text-center font-italic">No unprocessed orders!</div>
            }
        </div>
    </div>
    <div class="col-xl-4">
        <div class="container mobile-fondsize-11 shadow p-4 mb-4 bg-white">
            <div class="mobile-fondsize-20 h3 text-center text-muted font-italic">Shipped</div>
            <table class="table table-hover">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-md-2 col d-flex justify-content-center">№</th>
                        <th scope="col" class="col-md-8 col d-flex justify-content-center">Controls</th>
                        <th scope="col" class="col-md-2 col d-flex justify-content-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.ShippedOrdersViewModel)
                    {
                    <tr class="row">
                        <td class="col-2 d-flex justify-content-center">
                            @order.Id
                        </td>
                        <td class="col-md-8 d-flex justify-content-around">
                            <div class="mr-2">
                                <a asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Детайли</a>
                            </div>
                            <div class="mr-2">
                                <a asp-area="Administration" asp-controller="Orders" asp-action="Deliver" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Deliver</a>
                            </div>
                            <div class="mr-2">
                                <a asp-area="Administration" asp-controller="Orders" asp-action="Unprocess" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Undo</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            @if (Model.ShippedOrdersViewModel.Count == 0)
            {
            <div class="mobile-fondsize-11 h6 text-center font-italic">No shipped orders!</div>
            }
        </div>
    </div>
    <div class="col-xl-4">
        <div class="container mobile-fondsize-11 shadow p-4 mb-4 bg-white">
            <div class="mobile-fondsize-20 h3 text-center text-muted font-italic">Delivered</div>
            <table class="table table-hover">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-md-2 col d-flex justify-content-center">№</th>
                        <th scope="col" class="col-md-8 col d-flex justify-content-center">Controls</th>
                        <th scope="col" class="col-md-2 col d-flex justify-content-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.DeliveredOrdersViewModel)
                    {
                    <tr class="row">
                        <td class="col-2 d-flex justify-content-center">
                            @order.Id
                        </td>
                        <td class="col-md-8 d-flex justify-content-around">
                            <div class="mr-2">
                                <a asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Детайли</a>
                            </div>
                            <div class="mr-2">
                                <a asp-area="Administration" asp-controller="Orders" asp-action="Process" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Undo</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            @if (Model.DeliveredOrdersViewModel.Count == 0)
            {
            <div class="mobile-fondsize-11 h6 text-center font-italic">No delivered orders!</div>
            }
        </div>
    </div>
</div>