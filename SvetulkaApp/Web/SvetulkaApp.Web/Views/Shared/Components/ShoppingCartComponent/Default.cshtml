@model List<SvetulkaApp.Web.ViewModels.ShoppingCart.ShoppingCartViewModel>
<link href="~/css/shoppingCartProceed.css" rel="stylesheet" />
<div class="container mobile-fondsize-11 bg-white">
    <table class="table table-sm table-hover mb-0">
        <thead>
            <tr class="row">
                <th scope="col" class="col-2 d-flex justify-content-center">Product</th>
                <th scope="col" class="col-8 d-flex justify-content-center">Category</th>
                <th scope="col" class="col-2 d-flex justify-content-center">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr class="row">
                    <td class="col-2 d-flex justify-content-center">
                        <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                            <img src="@product.ImageUrl" width="50" height="50">
                        </a>
                    </td>
                    <td class="col-8 d-flex justify-content-center">
                        @product.Name
                        @*<a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                @product.Name
                            </a>*@
                    </td>
                    <td class="col-2 d-flex justify-content-center">
                        $@product.Price
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="totalSum">
        <p class="font-weight-bold text-danger h5 text-center">Total price: $@(Model.Sum(x => x.Price))</p>
    </div>
</div>